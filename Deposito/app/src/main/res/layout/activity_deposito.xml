            app:layout_constraintStart_toStartOf="@+id/searchView"
            android:layout_marginTop="20dp" app:layout_constraintTop_toBottomOf="@+id/searchView"/>
    <TextView
            android:text="@string/buscar_cuenta"
            android:layout_width="wrap_content"
            android:layout_height="38dp"
            android:id="@+id/textView4" android:typeface="monospace"
            android:fontFamily="monospace" android:textSize="30sp" android:lineSpacingExtra="30sp"
            android:layout_marginTop="24dp" app:layout_constraintTop_toBottomOf="@+id/textView2"
            android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="@+id/searchView"/>
