            android:layout_width="556dp"
            android:layout_height="319dp"
            app:layout_constraintEnd_toEndOf="@+id/searchView" app:layout_constraintStart_toStartOf="@+id/searchView"
            android:layout_marginTop="116dp" app:layout_constraintTop_toBottomOf="@+id/searchView"
            app:layout_constraintHorizontal_bias="0.0"/>
    <TextView
            android:text="@string/datos_titular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
