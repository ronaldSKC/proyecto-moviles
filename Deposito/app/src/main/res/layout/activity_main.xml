<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <ImageView
            android:layout_width="168dp"
            android:layout_height="139dp" tools:srcCompat="@tools:sample/avatars"
            android:id="@+id/imageView" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintVertical_bias="0.061"/>
    <EditText
            android:layout_width="342dp"
            android:layout_height="46dp"
            android:inputType="textPersonName"
            android:text="Name"
            android:ems="10"
            android:id="@+id/txt_usaurio" android:layout_marginTop="48dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView"
            app:layout_constraintEnd_toEndOf="@+id/imageView" app:layout_constraintStart_toStartOf="@+id/imageView"
            app:layout_constraintHorizontal_bias="0.489"/>
    <EditText
            android:layout_width="344dp"
            android:layout_height="48dp"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/txt_password"
            app:layout_constraintEnd_toEndOf="@+id/txt_usaurio" app:layout_constraintStart_toStartOf="@+id/txt_usaurio"
            android:layout_marginTop="20dp" app:layout_constraintTop_toBottomOf="@+id/txt_usaurio"
            app:layout_constraintHorizontal_bias="0.0"/>
    <Button
            android:text="@string/ingresar"
            android:layout_width="132dp"
            android:layout_height="48dp"
            android:id="@+id/button_login" app:layout_constraintEnd_toEndOf="@+id/txt_password"
            app:layout_constraintStart_toStartOf="@+id/txt_password" android:layout_marginTop="48dp"
            app:layout_constraintTop_toBottomOf="@+id/txt_password" app:layout_constraintHorizontal_bias="0.485"/>
    <Button
            android:text="@string/crear_usuario"
            android:layout_width="142dp"
            android:layout_height="50dp"
            android:id="@+id/button_crear_usuario" app:layout_constraintStart_toStartOf="@+id/button_login"
            app:layout_constraintEnd_toEndOf="@+id/button_login"
            android:layout_marginTop="44dp" app:layout_constraintTop_toBottomOf="@+id/button_login"
            app:layout_constraintHorizontal_bias="0.0"/>
</android.support.constraint.ConstraintLayout>