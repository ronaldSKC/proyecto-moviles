<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".CrearUsuarioActivity">

    <TextView
            android:text="@string/crear_usuario"
            android:layout_width="205dp"
            android:layout_height="45dp"
            android:id="@+id/textView" android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintVertical_bias="0.079"
            android:fontFamily="monospace" android:typeface="monospace" android:textSize="24sp"
            android:lineSpacingExtra="30sp" app:layout_constraintTop_toBottomOf="@+id/imageView2"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" tools:srcCompat="@tools:sample/avatars"
            android:id="@+id/imageView2" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"/>
    <EditText
            android:layout_width="323dp"
            android:layout_height="57dp"
            android:inputType="textPersonName"
            android:text="Name"
            android:ems="10"
            tools:layout_editor_absoluteY="267dp" android:id="@+id/editText"
            app:layout_constraintEnd_toEndOf="@+id/textView" app:layout_constraintStart_toStartOf="@+id/textView"/>
    <EditText
            android:layout_width="322dp"
            android:layout_height="58dp"
            android:inputType="textPersonName"
            android:text="Name"
            android:ems="10"
            android:id="@+id/editText3"
            app:layout_constraintStart_toStartOf="@+id/editText" app:layout_constraintEnd_toEndOf="@+id/editText"
            android:layout_marginTop="4dp" app:layout_constraintTop_toBottomOf="@+id/editText"
            app:layout_constraintHorizontal_bias="0.0"/>
    <EditText
            android:layout_width="324dp"
            android:layout_height="48dp"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/editText6"
            app:layout_constraintEnd_toEndOf="@+id/editText8" app:layout_constraintStart_toStartOf="@+id/editText8"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/editText8"
            app:layout_constraintHorizontal_bias="1.0"/>
    <EditText
            android:layout_width="324dp"
            android:layout_height="50dp"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/editText7"
            app:layout_constraintStart_toStartOf="@+id/editText3" app:layout_constraintEnd_toEndOf="@+id/editText3"
            android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/editText3"
    />
    <EditText
            android:layout_width="324dp"
            android:layout_height="53dp"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/editText8"
            app:layout_constraintEnd_toEndOf="@+id/editText7" app:layout_constraintStart_toStartOf="@+id/editText7"
            android:layout_marginTop="12dp" app:layout_constraintTop_toBottomOf="@+id/editText7"
            app:layout_constraintHorizontal_bias="1.0"/>
    <Button
            android:text="@string/guardar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button" app:layout_constraintEnd_toEndOf="@+id/editText6"
            app:layout_constraintStart_toStartOf="@+id/editText6" android:layout_marginTop="36dp"
            app:layout_constraintTop_toBottomOf="@+id/editText6"/>
</android.support.constraint.ConstraintLayout>